<link rel="stylesheet" href="/css/home.css">
<link rel="stylesheet" href="/css/chat_box.css">

<div id="home-container">
    <section id="feed-posts">
        <h4>Posts</h4>
        <% if(locals.user){ %>
        <form action="/posts/create" id="new-post-form" method="POST">
            <textarea name="content" cols="30" rows="3" placeholder="Type Here..." required></textarea>
            <input type="submit" value="Post">
        </form>
        <% } %>

        <div id="posts-list-container">
            <ul>
                <% for(let post of posts){ %>
                    <%- include('_post', { post: post }) -%>
                <% } %>
            </ul>
        </div>
        
    </section>

    <section id="user-friends">
        <h4>Friends</h4>
        <% for(let u of all_users){ %>
            <p>
                <a href="/users/profile/<%= u.id %>"><%= u.name %></a>
            </p>
        <% } %>
    </section>

    <!-- Including the chat box -->
    <%- include('_chat_box') -%>
</div>

<!-- Import scripts for post and comment handling -->
<script src="/js/home_post_comments.js"></script>
<script src="/js/home_posts.js"></script>

<!-- Script for toggle likes, initialized for existing posts and comments -->
<script src="/js/toggle_likes.js"></script>
<script>
    document.querySelectorAll('.toggle-like-button').forEach(function(btn) {
        new ToggleLike(btn);
    });
</script>

<!-- Import Socket.io and initialize ChatEngine -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.7.5/socket.io.min.js"></script>

<script src="/js/chat_engine.js"></script>
<% if (locals.user){ %>
<script>
    new ChatEngine('user-chat-box', '<%= locals.user.email %>');
</script>
<% } %>
