<html>
    <head>
        <title>
            <%= title %>
        </title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
        <link rel="stylesheet" href="/css/layout.css">
        <link rel="stylesheet" href="/css/header.css">
        <link rel="stylesheet" href="/css/footer.css">

        <%- style %> <!-- This line assumes 'style' contains valid CSS link or styles -->
        
    </head>

    <body>
        <%- include('_header') %> <!-- Proper inclusion of header -->

        <main id="layout-main">
            <%- body %> <!-- Rendering main body content -->
        </main>

        <%- include('_footer') %> <!-- Proper inclusion of footer -->

        <%- script %> <!-- This line assumes 'script' contains valid JS script links or scripts -->

        <script>
            <% if (flash.success && flash.success.length > 0) { %>
                new Noty({
                    theme: 'relax',
                    text: "<%= flash.success %>",
                    type: 'success',
                    layout: 'topRight',
                    timeout: 1500
                }).show();
            <% } %>

            <% if (flash.error && flash.error.length > 0) { %>
                new Noty({
                    theme: 'relax',
                    text: "<%= flash.error %>",
                    type: 'error',
                    layout: 'topRight',
                    timeout: 1500
                }).show();
            <% } %>
        </script>
        
    </body>
</html>
